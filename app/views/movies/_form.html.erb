<%= simple_form_for @movie do |f| %>
  <%= f.input :title %>
  <%= f.input :rating, collection: Movie::RATINGS %>
  <%= f.input :release_date, as: :text %>
  <% if current_user && current_user.admin? %>
   <%= f.input :published, as: :boolean %>
  <% end %>
  
  <%= f.submit 'Submit' %>
<% end %>

<%= link_to 'Back to movie list', movies_path(session[:previous_settings]) %>